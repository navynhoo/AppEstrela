<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7a597"
    android:orientation="vertical"
    tools:context=".Principal">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7a597"
        android:drawableRight="@drawable/ic_search"
        android:hint="TextField"
        android:padding="15dp"
        android:paddingTop="25dp"
        android:textColor="#d56f63" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical"
        android:layout_marginRight="3dp"
        android:paddingLeft="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <Button
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#d56f63"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Price: "
               android:textColor="#f7a597"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Image ID: "
                android:textColor="#f7a597"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Download"
                    android:background="#f7a597"
                    android:textColor="#FFF"

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="_____________________________________________________"
            android:textColor="#f7a597"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Owner: "
                android:textSize="20sp"
                android:textColor="#f7a597"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description: "
                android:textSize="20sp"
                android:textColor="#f7a597"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto Texto Texto Texto Texto Texto Texto Texto Texto Texto Texto Texto Texto Texto Texto "
                android:textSize="15sp"
                android:textColor="#f7a597"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="_____________________________________________________"
            android:textColor="#f7a597"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#d56f63"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#d56f63"
                android:layout_marginLeft="10dp"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#d56f63"
                android:layout_marginLeft="10dp"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#d56f63"
                android:layout_marginLeft="10dp"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#d56f63"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>



    </LinearLayout>
</LinearLayout>
